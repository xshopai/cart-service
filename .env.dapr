# Cart Service - Dapr Mode Configuration
# Service-to-service communication via Dapr sidecar
# Use this mode when running with Dapr

# Service Configuration
SERVICE_NAME=cart-service
SERVICE_VERSION=1.0.0
PORT=8008
HOST=0.0.0.0
NODE_ENV=development

# Service Invocation Mode
SERVICE_INVOCATION_MODE=dapr

# Cart Configuration
CART_MAX_ITEMS=50
CART_MAX_ITEM_QUANTITY=99
CART_TTL_DAYS=30
GUEST_CART_TTL_DAYS=7

# CORS Configuration
CORS_ALLOWED_ORIGINS=*

# Dapr Configuration
DAPR_HOST=localhost
DAPR_HTTP_PORT=3508
DAPR_GRPC_PORT=50008
DAPR_STATE_STORE=statestore
DAPR_PUBSUB_NAME=pubsub
DAPR_APP_ID=cart-service

# Messaging - use Dapr pubsub
MESSAGING_PROVIDER=dapr

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/cart-service.log

# =============================================================================
# OpenTelemetry Tracing Configuration
# =============================================================================
# When using Dapr, tracing is typically handled by Dapr's observability features
# Set OTEL_TRACES_EXPORTER=none to avoid duplicate traces
# =============================================================================

OTEL_TRACES_EXPORTER=none
ENABLE_TRACING=false
