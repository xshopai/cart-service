{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dapr-start",
      "type": "shell",
      "command": "dapr",
      "args": [
        "run",
        "--app-id", "cart-service",
        "--app-port", "8008",
        "--dapr-http-port", "3508",
        "--dapr-grpc-port", "50008",
        "--resources-path", "./.dapr/components",
        "--config", "./.dapr/config.yaml",
        "--log-level", "warn"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting Dapr.*",
          "endsPattern": "^.*You're up and running.*"
        }
      }
    },
    {
      "label": "dapr-stop",
      "type": "shell",
      "command": "dapr",
      "args": ["stop", "--app-id", "cart-service"]
    },
    {
      "label": "build",
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "dev",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "test",
      "type": "npm",
      "script": "test",
      "problemMatcher": []
    }
  ]
}
